<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinGreatCircle.Views.DMS_Degrees"
             Title="Degrees Minute Seconds to Degrees">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Frame BackgroundColor="#2196F3" Padding="5" CornerRadius="0">
                    <Label Text="DMS to Degrees" HorizontalTextAlignment="Center" TextColor="White" FontSize="16"/>
                </Frame>
                <Entry x:Name="LatDeg1" Text="28" />
                <Entry x:Name="LatMin1" Text="52" />
                <Entry x:Name="LatSec1" Text="50" />
                <Entry x:Name="LongDeg1" Text="-81" />
                <Entry x:Name="LongMin1" Text="42" />
                <Entry x:Name="LongSec1" Text="12" />
                <Button x:Name="Calculate" Text="Calculate" Clicked="Calculate_Clicked" />
                <Line X1="0" Y1="50" X2="600" Y2="50" Stroke="DarkBlue" StrokeThickness="10" />
                <Entry x:Name="EntryLat" Text="Latitude" Placeholder="Latitude result" />
                <Entry x:Name="EntryLong" Text="Longitude" Placeholder="Longitude result" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>